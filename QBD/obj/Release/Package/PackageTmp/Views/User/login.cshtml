@model QBD.Models.login_model
@{
    ViewBag.Title = "Login";
}

@if (Session["userID"] != null)
{
    @Html.Action("Index", "Home");
}
else
{
    <div class="container signup_c" >
        <div class="col-md-4">
        </div>
        <div class="col-md-4" style="margin-bottom:100px">



            <div class="row form_login">

                @using (Html.BeginForm("login", "User", FormMethod.Post))
                {

                    <div class="form-group">
                        <label class="label">Email</label>
                        @Html.TextBoxFor(model => model.email, new { @class = "form-control f_input", type = "email" })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "error" })
                    </div>

                    <div class="form-group">
                        <label class="label">Password</label><label style="margin-left:14%"> <a href="~/User/forgot_password">Forgot Password? </a></label>
                        @Html.TextBoxFor(model => model.password, new { @class = "form-control f_input",id= "password_n", type = "password", maxlength = "8" })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "error" })

                    </div>
                                    <div class="form-group">
                    <input type="checkbox" id="password_t"  onclick="password_toggle()" />
                    <label for="password_t">Show Password</label>

                    <script>
                        function password_toggle() {
                            var x = document.getElementById("password_n");
                            if (x.type === "password") {
                                x.type = "text";
                            }
                            else {
                                x.type = "password";
                            }
                        }
                    </script>

                </div>

                    <div class="form-group">
                        <button class=" btn btn-success sign_up_btn">
                            Login
                        </button>
                    </div>
                    <div class="form-group">
                        <h5>Don’t have an account?<a href="~/User/signup"> Sign up</a></h5>
                    </div>
                }

            </div>
        </div>
        <div class="col-md-4">

        </div>
    </div>

}
