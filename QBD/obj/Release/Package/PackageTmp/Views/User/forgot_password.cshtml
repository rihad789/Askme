@model QBD.Models.login_model
@{
    ViewBag.Title = "Forgot Password ";
}

@if (Session["userID"] != null)
{
    @Html.Action("Index", "Home");
}
else
{
    <div class="container signup_c">
        <div class="col-md-4">
        </div>
        <div class="col-md-4" style="margin-bottom:100px">

            <div class="row form_login">

                <div>
                    <p>
                        Forgot your account’s password.<br />Enter your
                        email address and we’ll send you a recovery
                        link.
                    </p>
                </div>

                @using (Html.BeginForm("forgot_password", "User", FormMethod.Post))
                {

                    <div class="form-group">
                        <label class="label">Email</label>
                        @Html.TextBoxFor(model => model.email, new { @class = "form-control f_input", id="email_id",type = "email" })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "error" })
                    </div>


                    <div class="form-group">
                        <label class="label">@ViewBag.error</label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class=" btn btn-success sign_up_btn">
                            Send Link
                        </button>

                    </div>

                }

            </div>
        </div>
        <div class="col-md-4">

        </div>
    </div>

}

